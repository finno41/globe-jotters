<div class = "mt-5 d-flex justify-content-center">
<%= link_to "Back", country_area_post_path(@country, @area, @post), class: "green-button"%>
</div>

<div class = "main-form-container">
  <div class= "post-form-container">
    <div data-controller="multi-upload">
    <%= simple_form_for [@country, @area, @post] do |f| %>
      <%= f.input :title, class: "form-label mb-3"  %>
      <%= f.input :summary, class: "form-label mb-3"  %>
      <%= f.input :description, class: "form-label mb-3" , as: :rich_text_area %>
      <%= f.input :category, collection: %w(bar restaurant activity nature memory), class: "form-label mt-3"%>
      <%= f.input :main_image, as: :file, label: "square image only", class: "form-label" %>
      <%= f.file_field :images, multiple: true, data: {action: "multi-upload#addFile"}, class: "form-label mt-3"%>
      <div data-multi-upload-target="files"></div>
      <%= f.button :submit %>
    <% end %>
    </div>
  </div>
</div>

<div class = "d-flex justify-content-center">
Current images:
</div>
<div class = "d-flex justify-content-center mb-5">
  <% @post.images.each do |image| %>
    <%= image_tag(image, width: "200px", class:"mx-1") %>
  <% end %>
</div>
